<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@drawable/about_btn_background"
    android:layout_gravity="center">


    <EditText
        android:id="@+id/edit_text_new_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:hint="Write your question"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lable_confirm_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/dialog_box_confirm_button_background"
            android:text="Confirm"
            android:textColor="@color/colorBlack" />

        <Button
            android:id="@+id/lable_cancel_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/dialog_box_cancel_button_background"
            android:text="Cancel"
            android:textColor="@color/colorBlack" />
    </LinearLayout>
</LinearLayout>