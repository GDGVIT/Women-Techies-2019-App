<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".QuizIntroActivity">

    <TextView
        android:id="@+id/instructionText"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:textSize="32sp"/>

    <View
        android:id="@+id/horizontalLine"
        android:layout_below="@id/instructionText"
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:background="@color/colorGradientBlue"/>

    <TextView
        android:layout_below="@id/horizontalLine"
        android:layout_marginRight="32dp"
        android:id="@+id/quiz_instructions"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#676464"
        android:lineSpacingExtra="0.8sp"
        android:text="You will have 10 seconds for every
question
You can attempt this quiz only once
Wrong answer will end the quiz"
        />

    <android.support.v7.widget.CardView
        android:onClick="startQuiz"
        android:layout_marginTop="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorGradientBlue"
        app:cardCornerRadius="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textSize="22sp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Quiz"
            />

    </android.support.v7.widget.CardView>


</RelativeLayout>